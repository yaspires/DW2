<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Editar Produtos</h1>
            <hr>
        </div>
        <div class="card-body">
            <form action="/produtos/update" method="POST">
                <label>Nome:</label>
                <input class="form-control" type="text" name="nome" id="nome" value="<%=produtos.nome%>" required>
                <label></label>
                <input class="form-control" type="text" name="preco" id="preco" value="<%=produtos.preco%>" required>
                <label></label>
                <input class="form-control" type="text" name="categoria" id="categoria" value="<%=produtos.categoria%>" required>
                <input type="submit" class="btn btn-warning" value="alterar" onclick="return confirm('Comfirmar as alterações para o cliente <%=cliente.nome%>?')">
            </form>
        </div>
    </div>
</div>

