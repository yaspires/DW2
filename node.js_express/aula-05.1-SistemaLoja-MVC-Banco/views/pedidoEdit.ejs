<%- include ('partials/header.ejs') %>
<%- include ('partials/navbar.ejs') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Editar pedidos</h1>
            <hr>
        </div>
        <div class="card-body">
            <form action="/pedidos/update" method="POST">
                <label>Número do pedido:</label>
                <input class="form-control" type="text" name="numero" id="numero" value="<%= pedido.numero%>" required>
                <label>valor</label>
                <input class="form-control" type="text" name="valor" id="valor" value="<%= pedido.valor%>" required>
                <input type="hidden" name="id" value="<%=pedido.id%>">
                <input type="submit" class="btn btn-warning" value="alterar" onclick="return confirm('Comfirmar as alterações para o pedido <%=pedido.numero%>?')">
            </form>
        </div>
    </div>
</div>

