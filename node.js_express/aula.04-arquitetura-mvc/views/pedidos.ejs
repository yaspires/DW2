<%- include ('partials/header.ejs')%>

        <center><h1>Pedidos</h1></center>
        <hr>
        <%#comentário no ejs%>

        <h4>forEach sem tabela</h4> 
        <%pedidos.forEach((pedidos) => {%>
            Produto: <%= pedidos.produto%><br>
            Valor: <%= pedidos.valor%><br><br>
            <%})%>

        <h4>forEach com tabela</h4>
        <table border="1">
            <tr>
                <th width="150px">Produto:</th>
                <th>Preço:</th>
            </tr>
            <% pedidos.forEach((pedidos)=>{ %>
            <tr>
                <td><%= pedidos.produto%></td>
                <td><%= pedidos.valor%></td>
            </tr>
            <% }) %>
        </table>

